                             FontFamily="Tw Cen MT" FontSize="15" BorderBrush="#000" Foreground="#000" 
                             Background="Transparent"  
                             materialDesign:HintAssist.HelperTextFontSize="13" />
                </Grid>

                <TextBlock FontFamily="Tw Cen MT" FontSize="23" Foreground="#000" HorizontalAlignment="Left" Margin="40px,15px,0,0">
                        <materialDesign:PackIcon Kind="Email" Height="17" Width="17" Foreground="#000" VerticalAlignment="Center"
                                          HorizontalAlignment="Left"
                                          Margin="0,0,0,0"/>
                        <TextBlock Text="Correo eléctronico" Margin="0,0,0,0"/>
                </TextBlock>
                <Grid>
                    <Border Background="{x:Null}" CornerRadius="5,5,0,0" Width="420px" Height="35" HorizontalAlignment="Center"
                                BorderBrush="#8D8D8D" BorderThickness="1,1,1,0"/>
                    <TextBox x:Name="CustomerEmailViewTextBox"
                             IsEnabled="False"
                             HorizontalAlignment="Center" 
                             Width="420" Height="35" Padding="6" VerticalContentAlignment="Center"
                             FontFamily="Tw Cen MT" FontSize="15" BorderBrush="#000" Foreground="#000" 
                             Background="Transparent"  
                             materialDesign:HintAssist.HelperTextFontSize="13" />
                </Grid>

                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <TextBlock FontFamily="Tw Cen MT" FontSize="23" Foreground="#000" HorizontalAlignment="Left" Margin="40px,15px,0,0">
                            <fa5:ImageAwesome Icon="Solid_Phone" Height="15" Width="15" Foreground="#000" VerticalAlignment="Center"
                                          HorizontalAlignment="Left"
                                          Margin="0,0,0,0"/>
                            <TextBlock Text="Teléfono" Margin="0,0,0,0"/>
                        </TextBlock>
                        <Grid>
                            <Border Background="{x:Null}" CornerRadius="5,5,0,0" Width="190px" Height="35" HorizontalAlignment="Left" Margin="40px,0,40px,0"
                                BorderBrush="#8D8D8D" BorderThickness="1,1,1,0"/>
                            <TextBox x:Name="CustomerPhoneViewTextBox"
                                     IsEnabled="False"
                                     HorizontalAlignment="Center" 
                                     Width="200px" Height="35" Padding="6" VerticalContentAlignment="Center"
                                     FontFamily="Tw Cen MT" FontSize="15" BorderBrush="#000" Foreground="#000" 
                                     Background="Transparent"  
                                     materialDesign:HintAssist.HelperTextFontSize="13" />
                        </Grid>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <TextBlock FontFamily="Tw Cen MT" FontSize="23" Foreground="#000" HorizontalAlignment="Left" Margin="-10px,15px,0,0">
                            <fa5:ImageAwesome Icon="Solid_BirthdayCake" Height="15" Width="15" Foreground="#000" VerticalAlignment="Center"
                                          HorizontalAlignment="Left"
                                          Margin="0,0,0,0"/>
                            <TextBlock Text="Fecha de Nacimiento" Margin="0,0,0,0"/>
                        </TextBlock>
                        <Grid>
                            <Border Background="{x:Null}" CornerRadius="5,5,0,0" Width="190px" Height="35" HorizontalAlignment="Left"
                                BorderBrush="#8D8D8D" BorderThickness="1,1,1,0"/>
                            <DatePicker Name="CustomerViewDatePicker"
                                         IsEnabled="False"
                                         HorizontalAlignment="Center" 
                                         Width="190px" Height="35" Padding="6" VerticalContentAlignment="Center"
                                         FontFamily="Tw Cen MT" FontSize="15" BorderBrush="#000" Foreground="#000" 
                                         Background="Transparent"  
                                         materialDesign:HintAssist.HelperTextFontSize="13" />
                        </Grid>
                    </StackPanel>
                </StackPanel>

                <TextBlock FontFamily="Tw Cen MT" FontSize="23" Foreground="#000" HorizontalAlignment="Left" Margin="40px,15px,0,0">
                        <fa5:ImageAwesome Icon="Solid_Home" Height="17" Width="17" Foreground="#000" VerticalAlignment="Center"
                                          HorizontalAlignment="Left"
                                          Margin="0,0,0,0"/>
                        <TextBlock Text="Direcciones" Margin="0,0,0,0"/>
                </TextBlock>

                <Grid>
                    <Border Background="Transparent" Height="240px" HorizontalAlignment="Center" Width="420px" CornerRadius="5" 
                            BorderBrush="#8D8D8D" BorderThickness="1"/>
                    <ListBox ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Visible"
                             ScrollViewer.CanContentScroll="True" Width="420px" Height="240px" Background="Transparent"
                             VerticalAlignment="Bottom" ItemsSource="{Binding}" Name="AdressesViewListBox">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#000" HorizontalAlignment="Left"
                                               TextWrapping="Wrap" TextAlignment="Justify" Text="{Binding Path=.}"
                                               Width="396"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
