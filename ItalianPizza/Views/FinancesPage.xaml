<Page x:Class="ItalianPizza.Views.FinancesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItalianPizza.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:fa5="http://schemas.fontawesome.com/icons/"
      xmlns:notifications="clr-namespace:Notifications.Wpf.Controls;assembly=Notifications.Wpf"
      xmlns:validations="clr-namespace:ItalianPizza.Validations"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="776"
      Title="FinancesPage">

    <Grid>
        <Border Background="#27161E" Width="776" Height="720" Opacity="0.91"/>

        <!--#region Main Elements-->
        <Grid x:Name="MainElementsInventoryGrid" >
            <StackPanel Orientation="Horizontal" Background="Transparent" Width="200" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,160,550,0" MouseLeftButtonUp="OpenRegistLayout">

                <TextBlock Foreground="#FFFFFF" FontFamily="Tw Cen MT" FontSize="30" Background="Transparent" Height="30" Width="108" Padding="0" >
                    Finanzas
                </TextBlock>
                <materialDesign:PackIcon Kind="PlusThick" Width="30" Height="30" Foreground="White" Margin="0,8,0,0"/>
            </StackPanel>

        </Grid>



        <!--Initial Message-->
        <Grid Background="Transparent" Margin="0,295,0,0" 
                Opacity="0.4" x:Name="InitialMessageBorder" VerticalAlignment="Center">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                <TextBlock Foreground="#FFFFFF" VerticalAlignment="Center" HorizontalAlignment="Center" 
                           Margin="0,0,0,30" FontFamily="Trebuchet MS" FontSize="50" Name="SearchResultMessageTextBlock"
                           TextWrapping="Wrap" TextAlignment="Center">
                        Realiza una búsqueda
                </TextBlock>
                <Image Source="../Images/finances.png" Width="300" Height="300" Margin="0,0,0,0" Opacity="1"/>
            </StackPanel>
        </Grid>
        <!--#endregion-->

        <!--#region DrawerRegion-->
        <materialDesign:DrawerHost
            x:Name="DrawerHost"
            Margin="0,0,0,0"
            Height="620"
            Width="776"
            VerticalAlignment="Bottom"
            BorderBrush="{DynamicResource MaterialDesignDivider}"
            LeftDrawerCornerRadius="20, 20, 20, 20"
            RightDrawerCornerRadius="20, 20, 20, 20" 
            RightDrawerBackground="Transparent" LeftDrawerBackground="Transparent" OverlayBackground="Transparent">
            <materialDesign:DrawerHost.Style>
                <Style
                    TargetType="materialDesign:DrawerHost"
                    BasedOn="{StaticResource {x:Type materialDesign:DrawerHost}}">
                    <Style.Triggers>
                        <DataTrigger
                            Binding="{Binding IsChecked, ElementName=BackgroundToggle}"
                            Value="True">
                            <Setter
                                Property="OverlayBackground"
                                Value="{DynamicResource PrimaryHueDarkBrush}" />
                        </DataTrigger>

                    </Style.Triggers>
                </Style>
            </materialDesign:DrawerHost.Style>
            <Grid
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="220,0,0,450">
                    <Button Name="MonetaryExpeditureButton" Click="OpenMonetaryExpeditureDrawer"
                        Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}"
                        CommandParameter="{x:Static Dock.Right}"
                        Margin="0,0,0,0"
                        Width="280"
                        Height="40" Background="Transparent" BorderBrush="Transparent">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CurrencyUsd" Foreground="#fff" Width="34" Height="34" VerticalAlignment="Center"/>
                            <TextBlock FontFamily="Tw Cen MT" FontSize="30" Foreground="#fff" VerticalAlignment="Center">
                                Gasto monetario
                            </TextBlock>
                        </StackPanel>

                    </Button>
                    <Button Name="DiaryBalanceButton" Click="OpenDiaryBalanceDrawer"
                        Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}"
                        CommandParameter="{x:Static Dock.Left}"
                        Width="280"
                        Height="40" Background="Transparent" BorderBrush="Transparent">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ScaleBalance" Foreground="#fff" Width="34" Height="34" Margin="0,0,4,0"/>
                            <TextBlock FontFamily="Tw Cen MT" FontSize="30" Foreground="#fff">
                                Balance diario
                            </TextBlock>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
            <materialDesign:DrawerHost.LeftDrawerContent>
                <!--#region DialyBalanceTable -->
                <Grid  x:Name="InventoryTableGrid">
                    <StackPanel Orientation="Vertical">

                        <Button Click="CloseElementsDrawer"
                            Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                            CommandParameter="{x:Static Dock.Left}"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Right"
                            Style="{DynamicResource MaterialDesignFlatButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ArrowLeft" Foreground="#fff"/>
                                <TextBlock FontFamily="Tw Cen MT" FontSize="14" Foreground="#fff">
                                    Regresar
                                </TextBlock>

                            </StackPanel>

                        </Button>

                        <!--#region Sort and Recharge-->
                        <Grid Height="20" Margin="0,18,35,0">

                            <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right" Height="50">

                                <StackPanel Orientation="Horizontal" Background="{x:Null}" Width="85" Height="14" VerticalAlignment="Top" Cursor="Hand">
                                    <fa5:ImageAwesome Icon="Solid_Sort" Height="11" Width="11" Foreground="#FFF" VerticalAlignment="Center" 
                                        Margin="0,0,5,0"/>
                                    <TextBlock Foreground="#FFFFFF" FontFamily="Tw Cen MT" FontSize="16" Padding="0" VerticalAlignment="Center">
                                        Ordenar
                                    </TextBlock>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Background="{x:Null}" Width="85" Height="14" VerticalAlignment="Top" Cursor="Hand">
                                    <materialDesign:PackIcon Kind="Reload" Margin="0,0,5,0" Foreground="#FFF" VerticalAlignment="Center"
                                         Height="18" Width="18"/>
                                    <TextBlock Foreground="#FFFFFF" FontFamily="Tw Cen MT" FontSize="16" Padding="0" VerticalAlignment="Center">
                                        Refrescar
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>

                        </Grid>
                        <!--#endregion-->

                        <!--#region Table headers #2C2C2E-->
                        <Grid Height="50" Margin="0,4,0,0">

                            <Border Name="InventoryTableHeaderBorder" Background="#5B5B5B" Height="45" Width="719"  CornerRadius="5,5,0,0" 
                                Opacity="0.4">

                            </Border>
                            <StackPanel Name="InventoryTableHeaderStackPanel" Orientation="Horizontal" Height="45" Width="769">

                                <Grid Width="100" Margin="30,0,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <fa5:ImageAwesome Icon="Solid_CalendarDay" Height="21" Width="21" Foreground="#FFF" VerticalAlignment="Center" 
                                          Margin="0,0,8,0"/>
                                        <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center">
                                            Fecha
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>

                                <Grid Width="450" Margin="0,0,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <fa5:ImageAwesome Icon="Solid_DollarSign" Height="21" Width="21" Foreground="#FFF" VerticalAlignment="Center" 
                                          Margin="0,0,8,0"/>
                                        <StackPanel>
                                            <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center" HorizontalAlignment="Center"  Margin="0,0,18,0">
                                                Saldo
                                            </TextBlock>
                                            <StackPanel Orientation="Horizontal" Width="420">
                                                <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,28,0">
                                                    Entrada
                                                </TextBlock>
                                                <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,28,0">
                                                    Salida
                                                </TextBlock>
                                                <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,28,0">
                                                    Inicial
                                                </TextBlock>
                                                <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,28,0">
                                                    En caja
                                                </TextBlock>
                                                <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,28,0">
                                                    Físico
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>

                                    </StackPanel>
                                </Grid>

                                <Grid Width="100" Margin="0,0,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <fa5:ImageAwesome Icon="Solid_User" Height="21" Width="21" Foreground="#FFF" VerticalAlignment="Center" 
                                          Margin="0,0,8,0"/>
                                        <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center">
                                            Empleado
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                        </Grid>
                        <!--#endregion-->

                        <!--#region Table body-->
                        <Grid>

                            <Border Name="dailyBalanceTableBodyBorder" Background="#5B5B5B" Height="350" Width="719" CornerRadius="0,0,5,5" 
                                Opacity="0" />
                            <ListBox Name="dailyBalanceTableBodyListBox" Height="350" Width="719"  HorizontalAlignment="Center" ItemsSource="{Binding}">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="1" VerticalAlignment="Top"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <!--BorderBrush="#CFCFCF" BorderThickness="0,0,0,1"-->
                                        <materialDesign:TransitioningContent OpeningEffectsOffset="{materialDesign:IndexedItemOffsetMultiplier 0:0:0.05}">
                                            <materialDesign:TransitioningContent.OpeningEffects>
                                                <materialDesign:TransitionEffect Kind="SlideInFromRight"/>
                                            </materialDesign:TransitioningContent.OpeningEffects>
                                            <StackPanel Orientation="Horizontal" Height="35" Width="709" Cursor="Hand" Background="Transparent">
                                                <Grid Width="100"  Margin="4,0,0,0">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding DateString}" FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid Width="70" Margin="8,0,0,0">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <TextBlock Text="$" FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap"/>
                                                        <TextBlock Text="{Binding EntryBalance}" FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid Width="70" Margin="8,0,0,0">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <TextBlock Text="$" FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap"/>
                                                        <TextBlock Text="{Binding InitialBalance}" FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid Width="70" Margin="8,0,0,0">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <TextBlock Text="$" FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap"/>
                                                        <TextBlock Text="{Binding ExitBalance}" FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid Width="70" Margin="8,0,0,0">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <TextBlock Text="$" FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap"/>
                                                        <TextBlock Text="{Binding CashBalance}" FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid Width="70" Margin="8,0,0,0">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <TextBlock Text="$" FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap"/>
                                                        <TextBlock Text="{Binding PhsycalBalance}" FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid Width="200" Margin="8,0,0,0">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <TextBlock FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap">
                                                    Antonio de Jesús Domínguez García
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Grid>

                                            </StackPanel>
                                        </materialDesign:TransitioningContent>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                        </Grid>
                        <!--#endregion-->
                    </StackPanel>
                </Grid>
                <!--#endregion-->
            </materialDesign:DrawerHost.LeftDrawerContent>

            <materialDesign:DrawerHost.RightDrawerContent>
                <!--#region Monetary expediture table -->
                <Grid  x:Name="monetaryExpeditureTableGrid">
                    <StackPanel Orientation="Vertical">

                        <Button Click="CloseElementsDrawer"
                            Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                            CommandParameter="{x:Static Dock.Right}"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Right"
                            Style="{DynamicResource MaterialDesignFlatButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ArrowLeft" Foreground="#fff"/>
                                <TextBlock FontFamily="Tw Cen MT" FontSize="14" Foreground="#fff">
                                    Regresar
                                </TextBlock>

                            </StackPanel>

                        </Button>

                        <!--#region Sort and Recharge-->
                        <Grid Height="20" Margin="0,18,35,0">

                            <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right" Height="50">

                                <StackPanel Orientation="Horizontal" Background="{x:Null}" Width="85" Height="14" VerticalAlignment="Top" Cursor="Hand">
                                    <fa5:ImageAwesome Icon="Solid_Sort" Height="11" Width="11" Foreground="#FFF" VerticalAlignment="Center" 
                                        Margin="0,0,5,0"/>
                                    <TextBlock Foreground="#FFFFFF" FontFamily="Tw Cen MT" FontSize="16" Padding="0" VerticalAlignment="Center">
                                        Ordenar
                                    </TextBlock>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Background="{x:Null}" Width="85" Height="14" VerticalAlignment="Top" Cursor="Hand">
                                    <materialDesign:PackIcon Kind="Reload" Margin="0,0,5,0" Foreground="#FFF" VerticalAlignment="Center"
                                         Height="18" Width="18"/>
                                    <TextBlock Foreground="#FFFFFF" FontFamily="Tw Cen MT" FontSize="16" Padding="0" VerticalAlignment="Center">
                                        Refrescar
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>

                        </Grid>
                        <!--#endregion-->

                        <!--#region Table headers #2C2C2E-->
                        <Grid Height="50" Margin="0,4,0,0">

                            <Border Name="monetaryExpeditureTablaHeaderBorder" Background="#5B5B5B" Height="45" Width="719"  CornerRadius="5,5,0,0" 
                                Opacity="0.4">

                            </Border>
                            <StackPanel Name="monetaryExpeditureTablHeaderStackPanel" Orientation="Horizontal" Height="45" Width="769">

                                <Grid Width="100" Margin="28,0,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <fa5:ImageAwesome Icon="Solid_DollarSign" Height="21" Width="21" Foreground="#FFF" VerticalAlignment="Center" 
                                          Margin="0,0,8,0"/>
                                        <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center">
                                            Cantidad
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>

                                <Grid Width="80" Margin="24,0,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <fa5:ImageAwesome Icon="Solid_CalendarDay" Height="21" Width="21" Foreground="#FFF" VerticalAlignment="Center" 
                                          Margin="0,0,8,0"/>
                                        <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center">
                                            Fecha
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>

                                <Grid Width="200" Margin="40,0,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <fa5:ImageAwesome Icon="Solid_Book" Height="21" Width="21" Foreground="#FFF" VerticalAlignment="Center" 
                                          Margin="0,0,10,0"/>
                                        <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            Descripción
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>

                                <Grid Width="110" Margin="90,0,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <fa5:ImageAwesome Icon="Solid_User" Height="21" Width="21" Foreground="#FFF" VerticalAlignment="Center" 
                                          Margin="0,0,10,0"/>
                                        <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            Empleado
                                        </TextBlock>

                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                        </Grid>
                        <!--#endregion-->

                        <!--#region Table body-->
                        <Grid>

                            <Border Name="monetaryExpeditureTableBodyBorder" Background="#5B5B5B" Height="400" Width="719" CornerRadius="0,0,5,5" 
                                Opacity="0" />
                            <ListBox Name="monetaryExpeditureTableBodyListBox" Height="350" Width="719"  HorizontalAlignment="Center" ItemsSource="{Binding}">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="1" VerticalAlignment="Top"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <materialDesign:TransitioningContent OpeningEffectsOffset="{materialDesign:IndexedItemOffsetMultiplier 0:0:0.05}">
                                            <materialDesign:TransitioningContent.OpeningEffects>
                                                <materialDesign:TransitionEffect Kind="SlideInFromRight"/>
                                            </materialDesign:TransitioningContent.OpeningEffects>
                                            <StackPanel Orientation="Horizontal" Width="709" Cursor="Hand" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Top">
                                                <Grid Width="50"  Margin="28,0,34,0" HorizontalAlignment="Center" VerticalAlignment="Top">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
                                                        <TextBlock Text="{Binding Amount}" FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid Width="150"  HorizontalAlignment="Center" VerticalAlignment="Top">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
                                                        <TextBlock Text="{Binding DateString}" FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid Width="230" Height="Auto" Margin="8,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Top">
                                                    <TextBlock Text="{Binding Description}" FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap"/>
                                                </Grid>

                                                <Grid Width="200"  Margin="8,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Top">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
                                                        <TextBlock Text="{Binding EmployeeName}" FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>
                                        </materialDesign:TransitioningContent>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>

                            </ListBox>

                        </Grid>
                        <!--#endregion-->
                    </StackPanel>
                </Grid>
                <!--#endregion-->
            </materialDesign:DrawerHost.RightDrawerContent>

        </materialDesign:DrawerHost>
        <!--#endregion-->

        <!--#region Search -->
        <Grid Margin="0,50,120,0" Name="RegionSearchGrid" >
            <TextBox Name="SearchTextBox" Background="#2C2C2E" Width="550px" Height="50px" VerticalAlignment="Top"
                     HorizontalAlignment="Center" Style="{StaticResource  MaterialDesignOutlinedTextBox}"
                     TextWrapping="Wrap" materialDesign:HintAssist.Hint="Buscar" Foreground="#FFFFFF"
                     materialDesign:HintAssist.HelperText="Selecciona un filtro de búsqueda"
                     materialDesign:HintAssist.HelperTextFontSize="13"
                     FontFamily="Tw Cen MT" FontSize="18" AcceptsReturn="True" Cursor="Hand"
                     materialDesign:HintAssist.Background="Transparent" 
                     materialDesign:HintAssist.Foreground="#8D8D8D" 
                     materialDesign:HintAssist.FloatingScale="1" BorderThickness="0"
                     materialDesign:HintAssist.FloatingOffset="0, -40"                               
                     materialDesign:TextFieldAssist.HasClearButton="True"
                     KeyUp="ShowSearchResults"/>

            <fa5:ImageAwesome Icon="Solid_Search" Height="18" Width="18" Foreground="#8D8D8D" VerticalAlignment="Top" 
                              HorizontalAlignment="Center" ToolTip="Selecciona un filtro" Margin="-590,17,0,0" />

            <StackPanel Orientation="Horizontal" Margin="0,-540,60,0" HorizontalAlignment="Right" Height="20"
                        Cursor="Hand" Background="Transparent" MouseLeftButtonUp="ShowFilters"
                        Style="{StaticResource StackPanelHoverStyle}">
                <fa5:ImageAwesome Icon="Solid_Filter" Height="13" Width="13" Foreground="#FFF" VerticalAlignment="Center" 
                                  ToolTip="Selecciona un filtro" Margin="0,0,4px,0" Name="FilterImageAwesome"/>
                <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center">
                    Filtro
                </TextBlock>
            </StackPanel>

            <Button Background="#7FFF0000" Style="{StaticResource MaterialDesignRaisedDarkButton}"                    
                    Content="Reiniciar Filtro" BorderBrush="#7F000000" Width="100" Padding="0"
                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,-87,0" Foreground="White"/>

            <!--#region Filter -->
            <Border Background="Transparent" Width="776" Height="720" Margin="0,-50,-120,0" VerticalAlignment="Top"
                    HorizontalAlignment="Center" Name="SecondLayerFilterBorder"  MouseLeftButtonUp="HideFilters" Visibility="Hidden"/>
            <Border Background="#CFCFCF" Width="250" Height="130" CornerRadius="5" VerticalAlignment="Top" 
                    HorizontalAlignment="Right"  Margin="0,60,120,0" Name="FirstLayerFilterBorder"  Visibility="Hidden"/>
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" Visibility="Hidden"
                        HorizontalAlignment="Right" Name="FiltersStackPanel">
                <StackPanel Orientation="Horizontal" Margin="0,75,105,0" >
                    <fa5:ImageAwesome Icon="Solid_Heart" Height="21" Width="21" Foreground="#000" VerticalAlignment="Center"
                                      Margin="12,0,10px,0"/>
                    <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#000" Margin="0,0,60,0">
                        Empleado
                    </TextBlock>

                    <RadioButton Name="employeeNameRadioButton" Margin="20,0,29,0" Background="#000" Cursor="Hand" 
                                 Style="{StaticResource MaterialDesignSwitchToggleButton}" GroupName="Filters">
                        <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                            <SolidColorBrush Color="#000000" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                        <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                            <SolidColorBrush Color="#8D8D8D" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    </RadioButton>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                    <fa5:ImageAwesome Icon="Solid_SortNumericUpAlt" Height="21" Width="21" Foreground="#000" VerticalAlignment="Center" 
                                      Margin="12,0,10px,0"/>
                    <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#000" Margin="0,0,50,0">
                        Cantidad
                    </TextBlock>
                    <RadioButton Name="quantityRadioButton" Margin="35,0,0,0" Background="#000" Cursor="Hand"
                                 Style="{StaticResource MaterialDesignSwitchToggleButton}" GroupName="Filters">
                        <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                            <SolidColorBrush Color="#000000" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                        <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                            <SolidColorBrush Color="#8D8D8D" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    </RadioButton>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                    <fa5:ImageAwesome Icon="Solid_MoneyBill" Height="21" Width="21" Foreground="#000" VerticalAlignment="Center" 
                                      Margin="12,0,10px,0"/>
                    <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#000" Margin="0,0,45,0">
                        Fecha
                    </TextBlock>
                    <RadioButton Name="dateRadioButton" Margin="65,0,0,0" Background="#000" Cursor="Hand"
                                 Style="{StaticResource MaterialDesignSwitchToggleButton}" GroupName="Filters">
                        <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                            <SolidColorBrush Color="#000000" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                        <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                            <SolidColorBrush Color="#8D8D8D" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    </RadioButton>
                </StackPanel>
            </StackPanel>
            <!--#endregion-->
        </Grid>
