                <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                    <fa5:ImageAwesome Icon="Regular_ObjectGroup" Height="21" Width="21" Foreground="#000" VerticalAlignment="Center" 
                                      Margin="12,0,10px,0"/>
                    <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#000" Margin="0,0,20,0">
                        Cantidad actual
                    </TextBlock>
                    <RadioButton Margin="23,0,0,0" Background="#000" Cursor="Hand"
                                 Style="{StaticResource MaterialDesignSwitchToggleButton}" GroupName="Filters">
                        <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                            <SolidColorBrush Color="#000000" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                        <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                            <SolidColorBrush Color="#8D8D8D" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    </RadioButton>
                </StackPanel>
            </StackPanel>
            <!--#endregion-->
        </Grid>
        <!--#endregion-->

        <!--#region Dialogue Item-->
        <Border Background="#000" Opacity="0.9"  x:Name="ThirdLayerInformationBorder" Visibility="Hidden"/>
        <Border Background="#FFF" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Hidden"
                Width="500" Height="600" Margin="0,-35,0,0" Opacity="1"
                Name="QuarterLayerInformationBorder">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="500" Height="500" Margin="0,0,0,0"  Visibility="Hidden"
              Name="OrderInformationGrid" >

                <StackPanel Name="GetOutStackPanel" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,-45,5,0" Background="Transparent"
                        Cursor="Hand" Width="51" Height="20" VerticalAlignment="Top"
                        Style="{StaticResource StackPanelHoverStyle}" MouseLeftButtonUp="HideSpecificItemInformation">
                    <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#000" HorizontalAlignment="Left">
                        Salir
                    </TextBlock>
                    <materialDesign:PackIcon Kind="Close" Foreground="#000" Width="20" Height="20"/>
                </StackPanel>

                <TextBlock Name="FieldsAreEditableTextBlock" FontFamily="Tw Cen MT" FontSize="50" Foreground="#000" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,-38,0,0">
                    Producto
                </TextBlock>

                <StackPanel Orientation="Vertical" Margin="0,20,0,0" Background="Transparent" HorizontalAlignment="Center"
                        Width="430">
                    <!--#region Item Information-->
                    <StackPanel Orientation="Horizontal"  Background="Transparent" HorizontalAlignment="Stretch">
                        <TextBlock FontFamily="Tw Cen MT" FontSize="23" Margin="0,0,34,8" Foreground="#000" HorizontalAlignment="Left">
                        Nombre del producto*
                        </TextBlock>

                        <TextBlock FontFamily="Tw Cen MT" FontSize="23" Foreground="#000" HorizontalAlignment="Left">
                        Código*
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"  Background="Transparent" HorizontalAlignment="Stretch">
                        <TextBox x:Name="ItemNameField"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        MaxLength="24"
                        materialDesign:HintAssist.Hint="Nombre del producto"
                        materialDesign:HintAssist.HelperText="Escriba el nombre del producto"
                        materialDesign:HintAssist.HelperTextFontSize="11"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"
                        BorderBrush="#BC766F6F"
                        Width="200"
                        Margin="4,0,26,28" Background="#00000000"/>
                        <TextBox x:Name="ItemCodeField"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        MaxLength="24"
                        materialDesign:HintAssist.Hint="Código"
                        materialDesign:HintAssist.HelperText="Escriba el código del producto"
                        materialDesign:HintAssist.HelperTextFontSize="11"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"
                        BorderBrush="#BC766F6F" 
                        Width="200"
                        Margin="0,0,0,28" Background="#00000000"/>
                    </StackPanel>
                    <TextBlock FontFamily="Tw Cen MT" FontSize="23" Margin="0,0,0,8" Foreground="#000" HorizontalAlignment="Left">
                    Descripción*
                    </TextBlock>
                    <TextBox x:Name="ItemDescriptionField"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    VerticalAlignment="Top"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto"
                    materialDesign:HintAssist.Hint="Escriba la descripción"
                    materialDesign:HintAssist.HelperText="Max 500 caracteres"
                    materialDesign:HintAssist.HelperTextFontSize="11"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    MaxLength="500"
                    BorderBrush="#BC766F6F"
                    Margin="0,0,0,28"
                    Background="#00000000"/>
                    <StackPanel Orientation="Horizontal"  Background="Transparent" HorizontalAlignment="Stretch">
                        <TextBlock FontFamily="Tw Cen MT" FontSize="23" Margin="0,0,80,8" Foreground="#000" HorizontalAlignment="Left" >
                        Precio*
                        </TextBlock>
                        <TextBlock FontFamily="Tw Cen MT" FontSize="23" Margin="0,0,44,0" Foreground="#000" HorizontalAlignment="Left">
                        Cantidad
                        </TextBlock>
                        <TextBlock FontFamily="Tw Cen MT" FontSize="20" Foreground="#000" HorizontalAlignment="Left">
                    Foto del producto*
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"  Background="Transparent" HorizontalAlignment="Stretch">
                        <TextBox x:Name="ItemValueField"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        MaxLength="5"
                        materialDesign:HintAssist.Hint="$ 00.00"
                        materialDesign:HintAssist.HelperText="Peso mexicano $"
                        materialDesign:HintAssist.HelperTextFontSize="11"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        materialDesign:TextFieldAssist.PrefixText="$"

                        materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"
                        BorderBrush="#BC766F6F"
                        Margin="0,0,18,28"
                        Width="120"
                        Background="#00000000"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,28">
                            <TextBox x:Name="ItemQuantityField"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            VerticalAlignment="Top"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            MaxLength="5"
                            materialDesign:HintAssist.Hint="00.0"
                            materialDesign:HintAssist.HelperText="Escoja la unidad"
                            materialDesign:HintAssist.HelperTextFontSize="11"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"
                            BorderBrush="#BC766F6F"
                            Width="70"
                            Background="#00000000"/>
                            <ComboBox
                            materialDesign:HintAssist.Hint="U" Width="70"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                <ComboBoxItem
                                Content="Kg" />
                                <ComboBoxItem
                                Content="Gm" />
                                <ComboBoxItem
                                Content="Ml" />
                                <ComboBoxItem
                                Content="Pz" />
                            </ComboBox>
                        </StackPanel>


                    </StackPanel>

                    <TextBlock FontFamily="Tw Cen MT" FontSize="23"  Margin="0,0,0,8" Foreground="#000" HorizontalAlignment="Left">
                    Restricciones
                    </TextBlock>
                    <TextBox x:Name="ItemRestrictionsField"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    VerticalAlignment="Top"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    MaxLength="500"
                    VerticalScrollBarVisibility="Auto"
                    materialDesign:HintAssist.Hint="Restricciones del producto"
                    materialDesign:HintAssist.HelperText="Descripción de restricciones"
                    materialDesign:HintAssist.HelperTextFontSize="11"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    BorderBrush="#BC766F6F"
                    Margin="0,0,0,28"
                    Background="#00000000"/>

                    <!--#endregion -->
                </StackPanel>

                <!--Buttons-->
                <ToggleButton x:Name="isIngredientButton"
                Content="{materialDesign:PackIcon Kind=Food}" HorizontalAlignment="Right" Margin="0,0,38,450"
                Style="{StaticResource MaterialDesignActionToggleButton}"
                ToolTip="MaterialDesignActionToggleButton"
                IsChecked="False"
                Height="34" Width="34"
                materialDesign:ToggleButtonAssist.OnContent="{materialDesign:PackIcon Kind=FoodOff}"
                materialDesign:ShadowAssist.ShadowDepth="Depth3" />

                <Border Background="BlueViolet" Width="44" Height="44" CornerRadius="40" Margin="280,100,0,0">
                    <fa5:ImageAwesome Icon="Solid_Upload" Height="23" Width="23" Foreground="#FFF" VerticalAlignment="Center" 
                                      ToolTip="Selecciona un filtro" Margin="0,0,0,0"/>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,-20">

                    <!--Register button-->
                    <Button Name="RegisterItemButton" Width="120" Margin="0,0,40,0" materialDesign:ButtonAssist.CornerRadius="8" Height="40" Click="RegistItem"
                        Background="#2C2C2E" BorderBrush="{x:Null}">
                        <StackPanel Orientation="Horizontal" >
                            <fa5:ImageAwesome Icon="Solid_Check" Height="13" Width="13" Foreground="#FFF" VerticalAlignment="Center" 
                                      ToolTip="Selecciona un filtro" Margin="0,0,4px,0"/>
                            <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" HorizontalAlignment="Left">
                            Registrar
                            </TextBlock>
                        </StackPanel>
                    </Button>
                    <!--Update button-->
                    <Button Name="UpdateItemDataButton" Width="120" Margin="0,0,40,0" Visibility="Collapsed" materialDesign:ButtonAssist.CornerRadius="8" Height="40" Click="UpdateItem"
                        Background="#2C2C2E" BorderBrush="{x:Null}">
                        <StackPanel Orientation="Horizontal">
                            <fa5:ImageAwesome Icon="Solid_Check" Height="13" Width="13" Foreground="#FFF" VerticalAlignment="Center" 
                                      ToolTip="Selecciona un filtro" Margin="0,0,4px,0"/>
                            <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" HorizontalAlignment="Left">
                            Actualizar
                            </TextBlock>
                        </StackPanel>
                    </Button>

                    <Button Name="CancelRegisterItemButton" Width="120" materialDesign:ButtonAssist.CornerRadius="8" Background="#2C2C2E" BorderBrush="{x:Null}" Click="CancelProdecure"
                         Height="40">
                        <StackPanel Orientation="Horizontal">
                            <fa5:ImageAwesome Icon="Solid_Ban" Height="13" Width="13" Foreground="#FFF" VerticalAlignment="Center" 
                                      ToolTip="Selecciona un filtro" Margin="0,0,4px,0"/>
                            <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" HorizontalAlignment="Left">
                            Cancelar
                            </TextBlock>
                        </StackPanel>
                    </Button>

                </StackPanel>


            </Grid>
        </Border>
       
        <!--#endregion-->

        <!--#region Delete product-->
        <Border Background="#000" Opacity="0.9" x:Name="ThirdLayerDeleteBorder" Visibility="hidden"/>
        <Border Background="#FFF" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="350" Height="200" Margin="0,0,0,0" Opacity="1"
                Name="QuarterLayerDeleteBorder" Visibility="hidden"/>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="350" Height="200" Margin="0,0,0,0" 
              Name="DeleteItemGrid" Visibility="hidden">
            <StackPanel Orientation="Vertical" Margin="0,4,0,0" Background="Transparent" HorizontalAlignment="Center">
                <TextBlock FontFamily="Tw Cen MT" FontSize="28" Foreground="#000" VerticalAlignment="Top" HorizontalAlignment="Center"
                           Margin="0,0,0,8">
                    Confirmación de Eliminación
                </TextBlock>
                <materialDesign:PackIcon Kind="AlertCircle" Margin="0,0,0,18" HorizontalAlignment="center" Width="30" Height="30"/>
                <TextBlock FontFamily="Tw Cen MT" FontSize="20" Foreground="#000" VerticalAlignment="Top" HorizontalAlignment="Center"
                           Margin="0,0,0,24">
                    ¿Desea confirmar la eliminación?
                </TextBlock>
                
                <!--#region Delete buttons-->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,-20">
                    
                    <Button Width="120" Margin="0,0,40,0" materialDesign:ButtonAssist.CornerRadius="8" Height="35"
                            Background="#2C2C2E" BorderBrush="{x:Null}">
                        <StackPanel Orientation="Horizontal">
                            <fa5:ImageAwesome Icon="Solid_Eraser" Height="13" Width="13" Foreground="#FFF" VerticalAlignment="Center" 
                                              ToolTip="Selecciona un filtro" Margin="0,0,4px,0"/>
                            <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" HorizontalAlignment="Left">
                                Aceptar
                            </TextBlock>
                        </StackPanel>
                    </Button>
                    <Button Width="120" materialDesign:ButtonAssist.CornerRadius="8" Background="#2C2C2E" BorderBrush="{x:Null}"
                            Height="40" Click="HideCancelGrid">
                        <StackPanel Orientation="Horizontal">
                            <fa5:ImageAwesome Icon="Solid_Ban" Height="13" Width="13" Foreground="#FFF" VerticalAlignment="Center" 
                                              ToolTip="Selecciona un filtro" Margin="0,0,4px,0"/>
                            <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" HorizontalAlignment="Left">
                                Cancelar
                            </TextBlock>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <!--#endregion-->
            </StackPanel>
            
        </Grid>
        <!--#endregion-->
        
        <!--#region DepartureConfirmationLayout-->
        <Border Background="#000" Opacity="0.4"  x:Name="ConfirmationBackBorder" Visibility="Hidden"/>
        <Border x:Name="DeparureConfirmationBorder" Background="#fff" CornerRadius="30" HorizontalAlignment="Center" VerticalAlignment="Center" Width="354" Height="200" Visibility="Hidden">
            <Grid>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" FontFamily="Tw Cen Mt" Margin="0,8,0,0">
                    Confirmación
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontFamily="Tw Cen Mt" Margin="0,24,0,0">
                    ¿Está seguro que desea confirmar el proceso?
                    </TextBlock>
                    <StackPanel Name="DeparureConfirmationButton" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,48,0,0">
                        <Button  HorizontalAlignment="Left" Width="120" Margin="0,0,40,0" materialDesign:ButtonAssist.CornerRadius="8" Height="40" Click="AcceptDepartureConfirmation"
                        Background="#2C2C2E" BorderBrush="{x:Null}">
                            <StackPanel Orientation="Horizontal" >
                                <fa5:ImageAwesome Icon="Solid_ClipboardCheck" Height="13" Width="13" Foreground="#FFF" VerticalAlignment="Center" 
                                      ToolTip="Selecciona un filtro" Margin="0,0,0,0"/>
                                <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" HorizontalAlignment="Left">
                                    Aceptar
                                </TextBlock>
                            </StackPanel>
                        </Button>
                        <Button  HorizontalAlignment="Right" Width="120" Margin="0,0,0,0" materialDesign:ButtonAssist.CornerRadius="8" Height="40" Click="HideDepartureConfirmation"
                        Background="#2C2C2E" BorderBrush="{x:Null}">
                            <StackPanel Orientation="Horizontal" >
                                <fa5:ImageAwesome Icon="Solid_WindowClose" Height="13" Width="13" Foreground="#FFF" VerticalAlignment="Center" 
                                      ToolTip="Selecciona un filtro" Margin="0,0,4px,0"/>
                                <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" HorizontalAlignment="Left">
                                    Cancelar
                                </TextBlock>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
        <!--#endregion-->

        <!--#region Process Confirmation-->
        <notifications:NotificationArea x:Name="ConfirmationToast" Position="BottomRight" MaxItems="3" 
                                        notifications:Notification.CloseOnClick="True" Margin="0,0,15,50" />
        <!--#endregion-->
    </Grid>
</Page>
