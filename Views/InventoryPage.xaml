<Page x:Class="ItalianPizza.Views.InventoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItalianPizza.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:fa5="http://schemas.fontawesome.com/icons/"
      xmlns:notifications="clr-namespace:Notifications.Wpf.Controls;assembly=Notifications.Wpf"
      xmlns:validations="clr-namespace:ItalianPizza.Validations"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="776"
      Title="Inventory">

    <Grid x:Name="MainGrid">
        <Border Background="#27161E" Width="776" Height="720" Opacity="0.91"/>

        <!--#region Main Elements-->
        <Grid x:Name="MainElementsInventoryGrid" >
            <StackPanel Orientation="Horizontal" Background="Transparent" Width="200" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,160,550,0" MouseUp="OpenRegistItem">

                <TextBlock Foreground="#FFFFFF" FontFamily="Tw Cen MT" FontSize="30" Background="Transparent" Height="30" Width="116" Padding="0" >
                Inventario
                </TextBlock>
                <materialDesign:PackIcon Kind="PlusThick" Width="30" Height="30" Foreground="White" Margin="8,8,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Background="Transparent" Width="120" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,168,455,0" MouseUp="ShowValidateLayout">
                <materialDesign:PackIcon Kind="TextBoxCheckOutline" Width="30" Height="30" Foreground="White" Margin="0,0,8,0"/>
                <TextBlock FontFamily="Tw Cen MT" FontSize="25" Foreground="#FFF">
                Validar
                </TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="524,154,0,0" MouseLeftButtonUp="GenerateReport">
                <materialDesign:PackIcon Kind="PrinterCheck" Foreground="#fff" Width="50" Height="50"/>
                <TextBlock FontFamily="Tw Cen MT" FontSize="25" Foreground="#FFF" Margin="8,14,0,0">
                    Generar reporte
                </TextBlock>
            </StackPanel>

            <TextBlock x:Name="SearchFilterTextBlock" FontFamily="Tw Cen MT" FontSize="25" Foreground="#FFF" VerticalAlignment="Top" Margin="30,205,0,0">
                    Consulta: Filtro/Busqueda
            </TextBlock>
        </Grid>
        
        
        <!--Initial Message-->
        <Grid Background="Transparent" Margin="0,295,0,0" 
                Opacity="0.4" x:Name="InitialMessageBorder" VerticalAlignment="Center">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                <TextBlock Foreground="#FFFFFF" VerticalAlignment="Center" HorizontalAlignment="Center" 
                           Margin="0,0,0,30" FontFamily="Trebuchet MS" FontSize="50" Name="SearchResultMessageTextBlock"
                           TextWrapping="Wrap" TextAlignment="Center">
                        Realiza una búsqueda
                </TextBlock>
                <Image Source="../Images/products.png" Width="300" Height="300" Margin="0,0,0,0" Opacity="1"/>
            </StackPanel>
        </Grid>
        <!--#endregion-->

        <!--#region InventoryTable -->
        <Grid Visibility="Hidden" x:Name="InventoryTableGrid">
            <!--#region Sort and Recharge-->
            <StackPanel Orientation="Horizontal" Margin="0,200,35,0" HorizontalAlignment="Right">
                <Button Background="{x:Null}" Width="85" Height="40" VerticalAlignment="Top" Cursor="Hand" Padding="0" 
                BorderBrush="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <fa5:ImageAwesome Icon="Solid_Sort" Height="11" Width="11" Foreground="#FFF" VerticalAlignment="Center" 
                                              Margin="0,0,5,0"/>
                        <TextBlock Foreground="#FFFFFF" FontFamily="Tw Cen MT" FontSize="16" Padding="0" VerticalAlignment="Center">
                            Ordenar
                        </TextBlock>
                    </StackPanel>
                </Button>

                <Button Background="{x:Null}" Width="85" Height="40" VerticalAlignment="Top" Cursor="Hand" Padding="0" 
                BorderBrush="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Reload" Margin="0,0,5,0" Foreground="#FFF" VerticalAlignment="Center"
                                             Height="18" Width="18"/>
                        <TextBlock Foreground="#FFFFFF" FontFamily="Tw Cen MT" FontSize="16" Padding="0" VerticalAlignment="Center">
                            Refrescar
                        </TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
            <!--#endregion-->

            <!--#region Table headers #2C2C2E-->
            <Border Name="InventoryTableHeaderBorder" Background="#5B5B5B" Height="45" Width="719" Margin="0,175,0,360" CornerRadius="5,5,0,0" 
                Opacity="0.4"/>
            <StackPanel Name="InventoryTableHeaderStackPanel" Orientation="Horizontal" Height="45" Width="769" Margin="0,175,0,360">
                <Grid Width="20" Margin="40,0,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <fa5:ImageAwesome Icon="Solid_SortNumericDown" Height="21" Width="21" Foreground="#FFF" VerticalAlignment="Center" 
                                          Margin="0,0,0,0"/>
                    </StackPanel>
                </Grid>

                <Grid Width="100" Margin="10,0,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center">
                            Nombre
                        </TextBlock>
                    </StackPanel>
                </Grid>

                <Grid Width="100" Margin="0,0,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center">
                            codigo
                        </TextBlock>
                    </StackPanel>
                </Grid>

                <Grid Width="100" Margin="0,0,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <StackPanel>
                            <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center" HorizontalAlignment="Center">
                            Ultimo
                            </TextBlock>
                            <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center" HorizontalAlignment="Center">
                            inventario
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <Grid Width="100" Margin="10,0,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <StackPanel>
                            <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center" HorizontalAlignment="Center">
                            Cantidad
                            </TextBlock>
                            <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center" HorizontalAlignment="Center">
                            actual
                            </TextBlock>
                        </StackPanel>
                        
                    </StackPanel>
                </Grid>

                <Grid Width="150" Margin="0,0,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <StackPanel>
                            <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center" HorizontalAlignment="Center">
                            Valor
                            </TextBlock>
                            <Grid Width="120">
                                <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center" HorizontalAlignment="Left">
                            Individual
                                </TextBlock>
                                <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center" HorizontalAlignment="Right">
                            Total
                                </TextBlock>
                            </Grid>
                        </StackPanel>

                    </StackPanel>
                </Grid>
            </StackPanel>
            <!--#endregion-->

            <!--#region Table body-->
            <Border Name="InventoryTableBodyBorder" Background="#5B5B5B" Height="350" Width="719" Margin="0,110,0,-100" CornerRadius="0,0,5,5" 
                Opacity="0" />
            <ListBox Name="InventoryTableBodyListBox" Height="350" Width="719" Margin="0,110,0,-100" HorizontalAlignment="Center" ItemsSource="{Binding}">
               
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1" VerticalAlignment="Top"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:TransitioningContent OpeningEffectsOffset="{materialDesign:IndexedItemOffsetMultiplier 0:0:0.05}">
                            <materialDesign:TransitioningContent.OpeningEffects>
                                <materialDesign:TransitionEffect Kind="SlideInFromRight"/>
                            </materialDesign:TransitioningContent.OpeningEffects>
                            <StackPanel Orientation="Horizontal" Height="35" Width="709" Cursor="Hand" Background="Transparent">

                                <Grid Width="20"  Margin="8,0,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding IdItem}" FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap">
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>

                                <Grid Width="100" Margin="4,0,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Grid>

                                <Grid Width="80" Margin="12,0,20,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Sku}" FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap">

                                        </TextBlock>
                                    </StackPanel>
                                </Grid>

                                <Grid Width="100" Margin="0,0,30,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding LastStockTaking}" FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap">

                                        </TextBlock>
                                    </StackPanel>
                                </Grid>

                                <Grid Width="50" Margin="0,0,20,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding QuantityWhithUnit}" FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap">

                                        </TextBlock>
                                    </StackPanel>
                                </Grid>

                                <Grid Width="60" Margin="0,0,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Price}" FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap">
1
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>

                                <Grid Width="100" Margin="0,0,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Total}" FontFamily="Tw Cen MT" FontSize="14" Foreground="#FFF" TextWrapping="Wrap">

                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                                <Grid Width="30" Margin="0,0,0,0" >
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
                                        <fa5:ImageAwesome Icon="Solid_Pen" x:Name="editIcon" Width="20" Height="20" Foreground="#C6BAFF" MouseLeftButtonUp="UpdateItemSpecification"/>
                                    </StackPanel>
                                </Grid>
                                <Grid Width="30" Margin="0,0,0,0" >
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
                                        <fa5:ImageAwesome Icon="Solid_Eye" x:Name="visualizeIcon" Width="20" Height="20" Foreground="#C6BAFF" MouseLeftButtonUp="ShowItemSpecification"/>
                                    </StackPanel>
                                </Grid>
                                <Grid Width="30" Margin="0,0,0,0">
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
                                        <fa5:ImageAwesome x:Name="deleteItemIcon" Icon="Solid_TrashAlt" Width="20" Height="20" Foreground="#B2AC0329" MouseLeftButtonUp="ShowDeleteLayout"/>
                                    </StackPanel>
                                </Grid>

                            </StackPanel>
                        </materialDesign:TransitioningContent>
                        
                        
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <!--#endregion-->
            
        </Grid>
        <!--#endregion-->

        <!--#region  ValidateInventoryTable-->
        <Grid x:Name="ValidateInventoryTableGrid" Visibility="Hidden">
            <!--#region Return and print-->
            <Border Background="Transparent" BorderBrush="Transparent" Width="50" Height="50" Margin="0,0,680,650" MouseUp="CancelValidationLayout">
                <materialDesign:PackIcon Kind="ArrowLeftCircle"  Foreground="#fff" Width="50" Height="50"  />
            </Border>
            
            <StackPanel Orientation="Horizontal" Margin="608,8,0,0" MouseLeftButtonUp="PrintValidationInventoryResult">
                <materialDesign:PackIcon Kind="Check" Foreground="#fff" Width="50" Height="50"/>
                <TextBlock FontFamily="Tw Cen MT" FontSize="25" Foreground="#FFF" Margin="8,14,0,0">
                    Terminar
                </TextBlock>
            </StackPanel>
            
            <!--#endregion-->
            
            <!--#region Validate inventory header table-->
            <Border Name="ValidateInventoryTableHeaderBorder" Background="#5B5B5B" Height="35" Width="719" Margin="0,0,0,520" CornerRadius="5,5,0,0" 
                Opacity="0.4" Visibility="Visible"/>
            <!--#endregion-->

            <!--#region validate Table body-->
            <Border Name="ValidateInventoryTableBodyBorder" Background="#5B5B5B" Height="350" Width="719" Margin="0,0,0,130" CornerRadius="0,0,5,5" 
                Opacity="0"/>

            <DataGrid Height="570" CanUserAddRows="False"  FontFamily="Tw Cen MT" FontSize="13" Foreground="White"
                              Background="Transparent" BorderBrush="#8D8D8D" IsReadOnly="False" Cursor="Pen"
                              BorderThickness="1" Name="StocktakingDataGrid" Width="719" Margin="0,10,0,0"
                              SelectionMode="Single" AutoGenerateColumns="false">
                <DataGrid.Resources>
                    <Style TargetType="DataGridCell">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True" >
                                <Setter Property="Background" Value="#D6D6D6" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="BorderBrush" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                        <Style.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                        </Style.Resources>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>

                    <DataGridTextColumn Header="id" CanUserResize="False" Width="43" Binding="{Binding IdItem}" IsReadOnly="True"/>

                    <DataGridTextColumn Header="Nombre" CanUserResize="False" Width="130" Binding="{Binding Name}" IsReadOnly="True"/>

                    <DataGridTextColumn Header="Codigo" CanUserResize="False" Width="75" Binding="{Binding Sku}" IsReadOnly="True"/>

                    <DataGridTextColumn Header="fecha" CanUserResize="False" Width="175" Binding="{Binding Date}" IsReadOnly="True"/>

                    <DataGridTextColumn Header="Cantidad" CanUserResize="False" Width="85" Binding="{Binding CurrentAmount}" IsReadOnly="True"/>

                    <DataGridTextColumn Header="Existencia" CanUserResize="False" Width="90" IsReadOnly="False" x:Name="QuantityDataGridTextColumn">
                        <DataGridTextColumn.Binding>
                            <Binding Path="PhysicalAmount" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                                <Binding.ValidationRules>
                                    <validations:Integer ValidatesOnTargetUpdated="True"/>
                                </Binding.ValidationRules>
                            </Binding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Descripción" CanUserResize="False" Width="210" IsReadOnly="False" x:Name="DescriptionDataGridTextColumn" EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" >
                        <DataGridTextColumn.Binding>
                            <Binding Path="Description" UpdateSourceTrigger="PropertyChanged" >
                                <Binding.ValidationRules>
                                    <validations:NotNull  ValidatesOnTargetUpdated="True"/>
                                </Binding.ValidationRules>
                            </Binding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>

                </DataGrid.Columns>
            </DataGrid>

