<Page x:Class="ItalianPizza.Views.CheckFoodRecipesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItalianPizza.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:fa5="http://schemas.fontawesome.com/icons/"  
      xmlns:notifications="clr-namespace:Notifications.Wpf.Controls;assembly=Notifications.Wpf" 
      xmlns:validations="clr-namespace:ItalianPizza.Validations"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="776"
      Title="Check Food Recipes">

    <Grid>
        <Border Background="#27161E" Width="776" Height="720" Opacity="0.91"/>

        <!--#region Main Elements-->
        <Button ToolTip="Registrar receta de platillo" Height="40" Width="125" Padding="0" Background="{x:Null}"
                Margin="30,158,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" BorderBrush="{x:Null}"
                Click="ShowFoodRecipeRegistrarionDialogue">
            <StackPanel Orientation="Horizontal" Cursor="Hand">
                <TextBlock Foreground="#FFFFFF" FontFamily="Tw Cen MT" FontSize="30" 
                       Padding="0" HorizontalAlignment="Center">
                Recetas
                </TextBlock>
                <fa5:ImageAwesome Icon="Solid_Plus" Height="20" Width="20"  Foreground="#FFFFFF" Margin="7,0,0,0"
                              VerticalAlignment="Center" />
            </StackPanel>
        </Button>

        <TextBlock FontFamily="Tw Cen MT" FontSize="25" Foreground="#FFF" VerticalAlignment="Top" Margin="30,205,0,0">
                    Consulta: Filtro/Búsqueda
        </TextBlock>

        <!--Initial Message-->
        <Grid Background="Transparent" Margin="0,295,0,0" 
                Opacity="0.4" x:Name="InitialMessageBorder" VerticalAlignment="Center">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                <!--<fa5:ImageAwesome Icon="Regular_Smile" Height="100" Width="100" Margin="0,0,0,20px" 
                                     Foreground="#FFFFFF" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                     ToolTip="Usuarios" />-->
                <TextBlock Foreground="#FFFFFF" VerticalAlignment="Center" HorizontalAlignment="Center" 
                           Margin="0,0,0,30" FontFamily="Trebuchet MS" FontSize="50" Name="SearchResultMessageTextBlock"
                           TextWrapping="Wrap" TextAlignment="Center">
                        Realiza una búsqueda
                </TextBlock>
                <Image Source="../Images/cooking.png" Width="300" Height="300" Margin="0,0,0,0" Opacity="1"/>
            </StackPanel>
        </Grid>
        <!--#endregion-->                
    
        <!--#region Food Recipes Table -->
        <Grid Visibility="Hidden" x:Name="FoodRecipeTableGrid">
            <!--#region Sort and Recharge-->
            <StackPanel Orientation="Horizontal" Margin="0,200,35,0" HorizontalAlignment="Right">
                <Button Background="{x:Null}" Width="85" Height="40" VerticalAlignment="Top" Cursor="Hand" Padding="0" 
                BorderBrush="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <fa5:ImageAwesome Icon="Solid_Sort" Height="11" Width="11" Foreground="#FFF" VerticalAlignment="Center" 
                                              Margin="0,0,5,0"/>
                        <TextBlock Foreground="#FFFFFF" FontFamily="Tw Cen MT" FontSize="16" Padding="0" VerticalAlignment="Center">
                            Ordenar
                        </TextBlock>
                    </StackPanel>
                </Button>

                <Button Background="{x:Null}" Width="85" Height="40" VerticalAlignment="Top" Cursor="Hand" Padding="0" 
                BorderBrush="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Reload" Margin="0,0,5,0" Foreground="#FFF" VerticalAlignment="Center"
                                             Height="18" Width="18"/>
                        <!--<fa5:ImageAwesome Icon="" Height="11" Width="11" Foreground="#FFF" VerticalAlignment="Center" 
                                              Margin="0,0,5,0"/>-->
                        <TextBlock Foreground="#FFFFFF" FontFamily="Tw Cen MT" FontSize="16" Padding="0" VerticalAlignment="Center">
                            Refrescar
                        </TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
            <!--#endregion-->

            <Border Height="400" Width="709" Margin="0,75,0,-100" CornerRadius="10" 
                    Opacity="1" BorderBrush="#5B5B5B" BorderThickness="0.5" />
                        
            <ListBox Width="709" Margin="0,75,0,-100" HorizontalAlignment="Center" Background="Transparent"
                     ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.CanContentScroll="False" Height="400" Cursor="Hand">
                <ListBoxItem BorderBrush="#CFCFCF" BorderThickness="0,0,0,0" 
                             Height="auto" MouseLeftButtonUp="ShowSpecificFoodRecipeInformation">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"  />
                            <ColumnDefinition Width="559" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        
                        <!--#region Table headers-->
                        <Grid Grid.Column="0" Grid.Row="0">
                            <Border Background="#5B5B5B" CornerRadius="5,0,0,5" 
                                    Opacity="0.4" Height="auto" Width="auto"/>

                            <StackPanel Orientation="Vertical" Height="auto" Width="150" HorizontalAlignment="Left">
                                <Grid Height="35" Background="Transparent" Margin="0,5,0,0">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left"
                                            Margin="0,0,0,0">
                                        <materialDesign:PackIcon Kind="CardText" Foreground="#FFF" VerticalAlignment="Center"
                                                                 HorizontalAlignment="Center" Height="25" Width="25" Margin="6,0,0,0"/>
                                        <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center"
                                               HorizontalAlignment="Center" Margin="10,0,0,0">
                                           Nombre
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>

                                <Grid Height="35" Background="Transparent" Margin="0,5,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="PeopleGroup" Foreground="#FFF" VerticalAlignment="Center"
                                                             HorizontalAlignment="Center" Height="25" Width="25" Margin="7,0,9,0"/>
                                        <TextBlock FontFamily="Tw Cen MT" FontSize="16" Foreground="#FFF" VerticalAlignment="Center">
                                            N° de porciones
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>

                                <Grid Height="auto" Background="Transparent" Margin="0,10,0,0" VerticalAlignment="Top">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="FoodDrumstick" Foreground="#FFF" VerticalAlignment="Center"
                                                                 HorizontalAlignment="Center" Height="26" Width="26" Margin="0,0,0,0"/>
                                        <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center" 
                                                   Margin="10,0,0,0" HorizontalAlignment="Center">
                                            Ingredientes
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Grid>
                        <!--#endregion-->
                        
                        <!--#region Table Body-->
                        <Grid Grid.Column="1" Grid.Row="0" Margin="0,0,35,0" VerticalAlignment="Center">
                            <Border Background="Transparent" CornerRadius="0,5,5,0" Opacity="0.4" BorderBrush="#CFCFCF"
                                    BorderThickness="0,1,1,1"/>
                            
                            <StackPanel Orientation="Vertical" Cursor="Hand" Background="Transparent"
                                        Visibility="Visible" Margin="0,0,0,0">
                                <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" TextWrapping="Wrap"
                                           VerticalAlignment="Center" Height="35" Margin="0,5,0,5" Background="Transparent"
                                           HorizontalAlignment="Left" Padding="7">
                                    Pizza grande casera
                                </TextBlock>
                                
                                <TextBlock FontFamily="Tw Cen MT" FontSize="16" Foreground="#FFF" TextWrapping="Wrap"
                                           Height="36.5" Margin="0,0,0,5" VerticalAlignment="Center" HorizontalAlignment="Left"
                                           Background="Transparent" Padding="10">
                                    08
                                </TextBlock>

                                <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" TextWrapping="Wrap"
                                           TextAlignment="Justify" Background="Transparent" Height="auto" Width="auto" Padding="10">
                                           1 Taza Harina todo uso, 
                                            Ajo En Polvo al gusto, 
                                            Orégano Fresco al gusto, 
                                            1/2 Cucharadita Sal, 
                                            5 Cucharadas de Agua, 
                                            5 Cucharadas Aceite De Oliva, 
                                            1/4 Taza Pasta de tomate, 
                                            2 Cucharadas Salsa De Tomate MAGGI®, 
                                            Sal de Ajo al gusto, 
                                            Sal de cebolla al gusto, 
                                            1 Unidad Tomate Riñón,
                                            1 Taza Queso Mozzarella, 
                                            2 Tazas Jamón, 
                                            1/2 Taza Aceitunas Verdes, 
                                            Ají En Polvo al gusto
                                </TextBlock>
                            </StackPanel>
                        </Grid>                        
                        
                        <!--#endregion-->
                    </Grid>
                </ListBoxItem>

                <ListBoxItem BorderBrush="#CFCFCF" 
                             Height="auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"  />
                            <ColumnDefinition Width="559" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <!--#region Table headers-->
                        <Grid Grid.Column="0" Grid.Row="0" Margin="0,0,0,0">
                            <Border Background="#5B5B5B" CornerRadius="5,0,0,5" 
                                    Opacity="0.4" Height="auto" Width="auto"/>

                            <StackPanel Orientation="Vertical" Height="auto" Width="150" HorizontalAlignment="Left">
                                <Grid Height="35" Background="Transparent" Margin="0,5,0,0">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left"
                                            Margin="0,0,0,0">
                                        <materialDesign:PackIcon Kind="CardText" Foreground="#FFF" VerticalAlignment="Center"
                                                                 HorizontalAlignment="Center" Height="25" Width="25" Margin="6,0,0,0"/>
                                        <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center"
                                               HorizontalAlignment="Center" Margin="10,0,0,0">
                                           Nombre
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>

                                <Grid Height="35" Background="Transparent" Margin="0,5,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="PeopleGroup" Foreground="#FFF" VerticalAlignment="Center"
                                                             HorizontalAlignment="Center" Height="25" Width="25" Margin="7,0,9,0"/>
                                        <TextBlock FontFamily="Tw Cen MT" FontSize="16" Foreground="#FFF" VerticalAlignment="Center">
                                            N° de porciones
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>

                                <Grid Height="auto" Background="Transparent" Margin="0,10,0,0" VerticalAlignment="Top">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="FoodDrumstick" Foreground="#FFF" VerticalAlignment="Center"
                                                                 HorizontalAlignment="Center" Height="26" Width="26" Margin="0,0,0,0"/>
                                        <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center" 
                                                   Margin="10,0,0,0" HorizontalAlignment="Center">
                                            Ingredientes
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Grid>
                        <!--#endregion-->

                        <!--#region Table Body-->
                        <Grid Grid.Column="1" Grid.Row="0" Margin="0,0,35,0" VerticalAlignment="Center">
                            <Border Background="Transparent" CornerRadius="0,5,5,0" Opacity="0.4" BorderBrush="#CFCFCF"
                                    BorderThickness="0,1,1,1"/>

                            <StackPanel Orientation="Vertical" Cursor="Hand" Background="Transparent"
                                        Visibility="Visible" Margin="0,0,0,0">
                                <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" TextWrapping="Wrap"
                                           VerticalAlignment="Center" Height="35" Margin="0,5,0,5" Background="Transparent"
                                           HorizontalAlignment="Left" Padding="7">
                                    Pizza mediana casera
                                </TextBlock>

                                <TextBlock FontFamily="Tw Cen MT" FontSize="16" Foreground="#FFF" TextWrapping="Wrap"
                                           Height="36.5" Margin="0,0,0,5" VerticalAlignment="Center" HorizontalAlignment="Left"
                                           Background="Transparent" Padding="10">
                                    08
                                </TextBlock>

                                <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" TextWrapping="Wrap"
                                           TextAlignment="Justify" Background="Transparent" Height="auto" Width="auto" Padding="10">
                                           1 Taza Harina todo uso, 
                                            Ajo En Polvo al gusto, 
                                            Orégano Fresco al gusto, 
                                            1/2 Cucharadita Sal
                                            
                                </TextBlock>
                            </StackPanel>
                        </Grid>

                        <!--#endregion-->
                    </Grid>
                </ListBoxItem>
            </ListBox>
        </Grid>
        
        <!--#endregion-->

        <!--#region Search -->
        <Grid Margin="0,50,120,0">
            <TextBox Background="#2C2C2E" Width="550px" Height="50px" VerticalAlignment="Top"
                     HorizontalAlignment="Center" Style="{StaticResource  MaterialDesignOutlinedTextBox}"
                     TextWrapping="Wrap" materialDesign:HintAssist.Hint="Buscar" Foreground="#FFFFFF"
                     materialDesign:HintAssist.HelperText="Selecciona un filtro de búsqueda"
                     materialDesign:HintAssist.HelperTextFontSize="13"
                     FontFamily="Tw Cen MT" FontSize="18" AcceptsReturn="True" Cursor="Hand"
                     materialDesign:HintAssist.Background="Transparent" 
                     materialDesign:HintAssist.Foreground="#8D8D8D" 
                     materialDesign:HintAssist.FloatingScale="1" BorderThickness="0"
                     materialDesign:HintAssist.FloatingOffset="0, -40"                               
                     materialDesign:TextFieldAssist.HasClearButton="True"
                     KeyUp="ShowSearchResults"
                     Name="SearchTextBox"/>

            <fa5:ImageAwesome Icon="Solid_Search" Height="18" Width="18" Foreground="#8D8D8D" VerticalAlignment="Top" 
                              HorizontalAlignment="Center" ToolTip="Selecciona un filtro" Margin="-590,17,0,0" />

            <StackPanel Orientation="Horizontal" Margin="0,-540,60,0" HorizontalAlignment="Right" Height="20"
                        Cursor="Hand" Background="Transparent" MouseLeftButtonUp="ShowFilters"
                        Style="{StaticResource StackPanelHoverStyle}">
                <fa5:ImageAwesome Icon="Solid_Filter" Height="13" Width="13" Foreground="#FFF" VerticalAlignment="Center" 
                                  ToolTip="Selecciona un filtro" Margin="0,0,4px,0" Name="FilterImageAwesome"/>
                <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#FFF" VerticalAlignment="Center">
                    Filtro
                </TextBlock>
            </StackPanel>

            <Button Background="#FF0000" Style="{StaticResource MaterialDesignRaisedDarkButton}"                    
                    Content="Reiniciar Filtro" BorderBrush="#FF0000" Width="100" Padding="0"
                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,-87,0" 
                    Click="ResetSearchFilters"/>

            <!--#region Filter -->
            <Border Background="Transparent" Width="776" Height="720" Margin="0,-50,-120,0" VerticalAlignment="Top"
                    HorizontalAlignment="Center" Name="SecondLayerFilterBorder" Visibility="Hidden"
                    MouseLeftButtonUp="HideFilters"/>
            <Border Background="#CFCFCF" Width="200" Height="170" CornerRadius="5" VerticalAlignment="Top" 
                    HorizontalAlignment="Right"  Margin="0,60,120,0" Name="FirstLayerFilterBorder" Visibility="Hidden"/>
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" Visibility="Hidden"
                        HorizontalAlignment="Right" Name="FiltersStackPanel" Margin="0,75,115,0" Background="Transparent">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,0" >
                    <materialDesign:PackIcon Kind="ChefHat" Foreground="#000" VerticalAlignment="Center"
                                             HorizontalAlignment="Center" Height="25" Width="25" Margin="10,0,9,0"/>
                    <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#000" Margin="0,0,0,0">
                        Por preparar
                    </TextBlock>

                    <RadioButton Margin="25,0,0,0" Background="#000" Cursor="Hand" 
                                 Style="{StaticResource MaterialDesignSwitchToggleButton}" GroupName="Filters"
                                 Name="CookFilterRadioButton" Click="ShowSelectedFilter">
                        <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                            <SolidColorBrush Color="#000000" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                        <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                            <SolidColorBrush Color="#8D8D8D" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    </RadioButton>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0,15,0,0" >
                    <materialDesign:PackIcon Kind="CardText" Foreground="#000" VerticalAlignment="Center"
                                             HorizontalAlignment="Center" Height="25" Width="25" Margin="10,0,9,0"/>
                    <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#000" Margin="0,0,60,0">
                        Nombre
                    </TextBlock>

                    <RadioButton Margin="0,0,12,0" Background="#000" Cursor="Hand" 
                                 Style="{StaticResource MaterialDesignSwitchToggleButton}" GroupName="Filters"
                                 Name="NameFilterRadioButton" Click="ShowSelectedFilter">
                        <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                            <SolidColorBrush Color="#000000" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                        <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                            <SolidColorBrush Color="#8D8D8D" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    </RadioButton>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                    <materialDesign:PackIcon Kind="FoodDrumstick" Foreground="#000" VerticalAlignment="Center"
                                             HorizontalAlignment="Center" Height="25" Width="25" Margin="10,0,9,0"/>
                    <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#000" Margin="0,0,60,0">
                        Ingrediente
                    </TextBlock>
                    <RadioButton Margin="-25,0,0,0" Background="#000" Cursor="Hand"
                                 Style="{StaticResource MaterialDesignSwitchToggleButton}" GroupName="Filters"
                                 Name="IngredientFilterRadioButton" Click="ShowSelectedFilter">
                        <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                            <SolidColorBrush Color="#000000" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                        <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                            <SolidColorBrush Color="#8D8D8D" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    </RadioButton>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                    <materialDesign:PackIcon Kind="PeopleGroup" Foreground="#000" VerticalAlignment="Center"
                                             HorizontalAlignment="Center" Height="25" Width="25" Margin="10,0,9,0"/>
                    <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#000" Margin="0,0,60,0">
                        N° Porciones
                    </TextBlock>
                    <RadioButton Margin="-35,0,0,0" Background="#000" Cursor="Hand"
                                 Style="{StaticResource MaterialDesignSwitchToggleButton}" GroupName="Filters"
                                 Name="PortionsFilterRadioButton" Click="ShowSelectedFilter">
                        <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                            <SolidColorBrush Color="#000000" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                        <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                            <SolidColorBrush Color="#8D8D8D" />
                        </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    </RadioButton>
                </StackPanel>
            </StackPanel>
            <!--#endregion-->
        </Grid>
        <!--#endregion-->
        
        <!--#region Dialogue Food Recipe-->
        <Border Background="#000" Opacity="0.9" Visibility="Hidden" x:Name="ThirdLayerInformationBorder"/>
        <Border Background="#FFFFFF" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="750" Height="660" Margin="0,-40,0,0" Visibility="Hidden"
                Name="QuarterLayerInformationBorder"/>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="750" Height="660" Margin="0,60,0,0" 
              Name="FoodRecipeGrid" Visibility="Hidden" Background="Transparent">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500"  />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Grid Grid.Column="0" Grid.Row="0" Grid.RowSpan="1" Grid.ColumnSpan="2">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,-45,5,0" Background="Transparent"
                            Cursor="Hand" Width="51" Height="20" VerticalAlignment="Top" 
                            Style="{StaticResource StackPanelHoverStyle}" MouseLeftButtonUp="HideSpecificFoodRecipeInformation">
                    <TextBlock FontFamily="Tw Cen MT" FontSize="18" Foreground="#000" HorizontalAlignment="Left">
                            Salir
                    </TextBlock>
                    <materialDesign:PackIcon Kind="Close" Foreground="#000" Width="20" Height="20"/>
                </StackPanel>
                <TextBlock FontFamily="Tw Cen MT" FontSize="50" Foreground="#000" VerticalAlignment="Top" HorizontalAlignment="Center"
                           Margin="0,-38,0,0" Name="FoodRecipeHeaderTextBlock">
                        Registro de Receta de Platillo
                </TextBlock>
                <TextBlock FontFamily="Tw Cen MT" FontSize="13" Foreground="#8D8D8D" HorizontalAlignment="Center"
                           Margin="0,7,0,0" Name="FieldsEnabledMessageTextBlock" Visibility="Visible">
                            Formulario de registro
                </TextBlock>
            </Grid>

            <Grid Background="Transparent" Grid.Column="0" Grid.Row="1" Height="590" VerticalAlignment="Top" Margin="0,-20,0,0"
                  Grid.RowSpan="2">
                <StackPanel Orientation="Vertical" Margin="0,20,0,0" Background="{x:Null}" HorizontalAlignment="Center"
                            Width="430">
                    <!--#region Food Recipe Information-->
                    <TextBlock FontFamily="Tw Cen MT" FontSize="23" Foreground="#000" HorizontalAlignment="Left">
                            *Nombre de la receta
                    </TextBlock>
                    <Grid Cursor="Hand">
                        <Border Background="{x:Null}" CornerRadius="5" Width="430" Height="35" HorizontalAlignment="Left"
                                BorderBrush="#8D8D8D" BorderThickness="1"/>
                        <!--<materialDesign:Chip Content="José Daniel Camarillo Villa" FontFamily="Tw Cen MT" FontSize="15" Foreground="#000"/>-->
                        <TextBox materialDesign:HintAssist.HelperText="Nombre de la receta de platillo"  
                                  materialDesign:HintAssist.Hint="Ingresa el nombre de la receta del platillo" 
                                  HorizontalAlignment="Left" materialDesign:TextFieldAssist.HasClearButton="True"
                                  Width="430" Height="35" Padding="6" VerticalContentAlignment="Center"
                                  FontFamily="Tw Cen MT" FontSize="15" BorderBrush="#000" Foreground="#000" 
                                  Background="Transparent" BorderThickness="0.01" MaxLength="50"
                                  materialDesign:HintAssist.FloatingOffset="0,0"  TextWrapping="Wrap"
                                  materialDesign:HintAssist.HelperTextFontSize="13"
                                  materialDesign:HintAssist.Background="Transparent" 
                                  materialDesign:HintAssist.Foreground="Transparent"
                                  Name="FoodRecipeNameTextBox">

                            <TextBox.Text>
                                <Binding Path="Name" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">                                    
                                    <Binding.ValidationRules>
                                        <validations:AlphabeticCharacter ValidatesOnTargetUpdated="True"/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </Grid>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Tw Cen MT" FontSize="23" Foreground="#000" HorizontalAlignment="Left"
                                   Margin="0,25,0,0">
                            *Número de porciones
                        </TextBlock>
                        <TextBlock FontFamily="Tw Cen MT" FontSize="23" Foreground="#000" HorizontalAlignment="Left"
                                   Margin="25,25,0,0">
                            *Precio
                        </TextBlock>
                    </StackPanel>
                    <Grid Name="PortionsAndPriceGrid">
                        <Border Background="{x:Null}" CornerRadius="5" Width="200" Height="35" HorizontalAlignment="Left"
                                BorderBrush="#8D8D8D" BorderThickness="1,1,1,1" />
                        <Border Background="{x:Null}" CornerRadius="5" Width="200" Height="35" HorizontalAlignment="Left" Margin="230,0,0,0"
                                BorderBrush="#8D8D8D" BorderThickness="1"/>
                        <StackPanel Orientation="Horizontal" Cursor="Hand">
                            <ComboBox materialDesign:HintAssist.HelperText="Número de porciones"  
                                  materialDesign:HintAssist.Hint="Incrementa la cantidad" 
                                  HorizontalAlignment="Left" materialDesign:TextFieldAssist.HasClearButton="True"
                                  Width="200" Height="35" Padding="6" VerticalContentAlignment="Center"
                                  FontFamily="Tw Cen MT" FontSize="15" BorderBrush="#000" Foreground="#000" 
                                  Background="Transparent" BorderThickness="0.01"
                                  materialDesign:HintAssist.FloatingOffset="0,0" 
                                  materialDesign:HintAssist.HelperTextFontSize="13"
                                  materialDesign:HintAssist.Background="Transparent" 
                                  materialDesign:HintAssist.Foreground="Transparent"                                 
                                  IsEnabled="True" Name="FoodRecipePortionsComboBox">

                                <ComboBox.Text>
                                    <Binding Path="Portions" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                                        <Binding.ValidationRules>
                                            <validations:DecimalNumber ValidatesOnTargetUpdated="True"/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </ComboBox.Text>
                                
                                <ComboBoxItem>1</ComboBoxItem>
                                <ComboBoxItem>2</ComboBoxItem>
                                <ComboBoxItem>3</ComboBoxItem>
                                <ComboBoxItem>4</ComboBoxItem>
                                <ComboBoxItem>5</ComboBoxItem>
                                <ComboBoxItem>6</ComboBoxItem>
                                <ComboBoxItem>7</ComboBoxItem>
                                <ComboBoxItem>8</ComboBoxItem>
