                        Salir
                    </TextBlock>
                    <materialDesign:PackIcon Kind="Close" Foreground="#000" Width="20" Height="20"/>
                </StackPanel>

                <TextBlock Name="FieldsAreEditableTextBlock" FontFamily="Tw Cen MT" FontSize="50" Foreground="#000" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,-38,0,0">
                    Producto
                </TextBlock>

                <StackPanel Orientation="Vertical" Margin="0,20,0,0" Background="Transparent" HorizontalAlignment="Center"
                        Width="430">
                    <!--#region Item Information-->
                    <StackPanel Orientation="Horizontal"  Background="Transparent" HorizontalAlignment="Stretch">
                        <TextBlock FontFamily="Tw Cen MT" FontSize="23" Margin="0,0,34,8" Foreground="#000" HorizontalAlignment="Left">
                        Nombre del producto*
                        </TextBlock>

                        <TextBlock FontFamily="Tw Cen MT" FontSize="23" Foreground="#000" HorizontalAlignment="Left">
                        Código*
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"  Background="Transparent" HorizontalAlignment="Stretch">
                        <TextBox Name="ItemNameField"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            VerticalAlignment="Top"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            MaxLength="24"
                            materialDesign:HintAssist.Hint="Nombre del producto"
                            materialDesign:HintAssist.HelperText="Escriba el nombre del producto"
                            materialDesign:HintAssist.HelperTextFontSize="11"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"
                            BorderBrush="#BC766F6F"
                            Width="200"
                            Margin="4,0,26,28" Background="#00000000">

                            <TextBox.Text>
                                <Binding Path="Name" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                                    <Binding.ValidationRules>
                                        <validations:AlphabeticCharacter ValidatesOnTargetUpdated="True"/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <TextBox Name="ItemCodeField"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        MaxLength="24"
                        materialDesign:HintAssist.Hint="Código"
                        materialDesign:HintAssist.HelperText="Escriba el código del producto"
                        materialDesign:HintAssist.HelperTextFontSize="11"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"
                        BorderBrush="#BC766F6F" 
                        Width="200"
                        Margin="0,0,0,28" Background="#00000000">

                            <TextBox.Text>
                                <Binding Path="Sku" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                                    <Binding.ValidationRules>
                                        <validations:Integer ValidatesOnTargetUpdated="True"/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>
                    <TextBlock FontFamily="Tw Cen MT" FontSize="23" Margin="0,0,0,8" Foreground="#000" HorizontalAlignment="Left">
                        Descripción*
                    </TextBlock>
                    <TextBox Name="ItemDescriptionField"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto"
                        materialDesign:HintAssist.Hint="Escriba la descripción"
                        materialDesign:HintAssist.HelperText="Max 500 caracteres"
                        materialDesign:HintAssist.HelperTextFontSize="11"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        MaxLength="500"
                        BorderBrush="#BC766F6F"
                        Margin="0,0,0,28"
                        Background="#00000000">

                        <TextBox.Text>
                            <Binding Path="Description" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                                <Binding.ValidationRules>
                                    <validations:NotNull ValidatesOnTargetUpdated="True"/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <StackPanel Orientation="Horizontal"  Background="Transparent" HorizontalAlignment="Stretch">
                        <TextBlock FontFamily="Tw Cen MT" FontSize="23" Margin="0,0,80,8" Foreground="#000" HorizontalAlignment="Left" >
                            Precio*
                        </TextBlock>
                        <TextBlock FontFamily="Tw Cen MT" FontSize="23" Margin="0,0,44,0" Foreground="#000" HorizontalAlignment="Left">
                            Cantidad
                        </TextBlock>
                        <TextBlock FontFamily="Tw Cen MT" FontSize="20" Foreground="#000" HorizontalAlignment="Left">
                            Foto del producto*
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"  Background="Transparent" HorizontalAlignment="Stretch">
                        <TextBox Name="ItemValueField"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            VerticalAlignment="Top"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            MaxLength="5"
                            materialDesign:HintAssist.Hint="$ 00.00"
                            materialDesign:HintAssist.HelperText="Peso mexicano $"
                            materialDesign:HintAssist.HelperTextFontSize="11"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            materialDesign:TextFieldAssist.PrefixText="$"

                            materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"
                            BorderBrush="#BC766F6F"
                            Margin="0,0,18,28"
                            Width="120"
                            Background="#00000000">

                            <TextBox.Text>
                                <Binding Path="Price" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                                    <Binding.ValidationRules>
                                        <validations:DecimalNumber ValidatesOnTargetUpdated="True"/>
                                        <validations:NotNull ValidatesOnTargetUpdated="True"/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,28">
                            <TextBox Name="ItemQuantityField"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                VerticalAlignment="Top"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                MaxLength="5"
                                materialDesign:HintAssist.Hint="00.0"
                                materialDesign:HintAssist.HelperText="Escoja la unidad"
                                materialDesign:HintAssist.HelperTextFontSize="11"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"
                                BorderBrush="#BC766F6F"
                                Width="70"
                                Background="#00000000">
                                <TextBox.Text>
                                    <Binding Path="Quantity" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                                        <Binding.ValidationRules>
                                            <validations:Integer ValidatesOnTargetUpdated="True"/>
                                            <validations:NotNull ValidatesOnTargetUpdated="True"/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                            <ComboBox Name="ItemUnitOfMeasurementComboBox"
                                materialDesign:HintAssist.Hint="U" Width="70"
                                Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                <ComboBox.Text>
                                    <Binding Path="UnitOfMeasurement" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                                        <Binding.ValidationRules>
                                            <validations:NotNull ValidatesOnTargetUpdated="True"/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </ComboBox.Text>
                                <ComboBoxItem
                                    Content="Kg" />
                                <ComboBoxItem
                                    Content="Gm" />
                                <ComboBoxItem
                                    Content="Ml" />
                                <ComboBoxItem
                                    Content="Pz" />
                            </ComboBox>
                        </StackPanel>
                        

                    </StackPanel>

                    <TextBlock FontFamily="Tw Cen MT" FontSize="23"  Margin="0,0,0,8" Foreground="#000" HorizontalAlignment="Left">
                        Restricciones
                    </TextBlock>
                    <TextBox Name="ItemRestrictionsField"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        MaxLength="500"
                        VerticalScrollBarVisibility="Auto"
                        materialDesign:HintAssist.Hint="Restricciones del producto"
                        materialDesign:HintAssist.HelperText="Descripción de restricciones"
                        materialDesign:HintAssist.HelperTextFontSize="11"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        BorderBrush="#BC766F6F"
                        Margin="0,0,0,28"
                        Background="#00000000">

                        <TextBox.Text>
                            <Binding Path="Restrictions" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                                <Binding.ValidationRules>
                                    <validations:DecimalNumber ValidatesOnTargetUpdated="True"/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>

                    <!--#endregion -->
                </StackPanel>

                <!--Buttons-->
                <ToggleButton Name="isIngredientButton"
                    Content="{materialDesign:PackIcon Kind=Food}" HorizontalAlignment="Right" Margin="0,0,38,450"
                    Style="{StaticResource MaterialDesignActionToggleButton}"
